pipeline{
    agent any;
    stages{
        stage('Build'){
            steps{
                echo "This is building stage"
                sh 'sleep 5'
            }
        }
        stage('Test'){
            steps{
                echo "This is testing stage"
                sh 'sleep 5'
            }
        }
        stage('Deploy'){
            steps{
                echo "This is deploying stage"
                sh 'sleep 5'
            }
        }
    }
}