pipeline{
    agent any;
    stages{
        stage('BUILD'){
            steps{
                echo "This is building stage"
                sh 'sleep 5'
            }
        }
        stage('TEST'){
            steps{
                echo "This is testing stage"
                sh 'sleep 5'
            }
        }
        stages{
            parallel{
                stage('Deploy'){
                    steps{
                        echo "This is deploying stage"
                    }
                }
                stage('Deploy to Test bed'){
                    steps{
                        echo "This is deploying to test bed stage"
                    }
                }

            }
        }
        
    }
}
